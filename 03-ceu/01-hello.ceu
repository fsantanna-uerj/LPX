^["@/pico/pico.ceu"]

pico-state-set-title("pico-Ceu: Hello World!")

task Line (pos:XY, vel:XY) {
    par {
        every :Pico.Draw {
            pico-state-set-color-draw([255,255,255,255])
            pico-output-draw-pixel(pos)
        }
    } with {
        every 50:ms {
            set pos.x = pos.x + vel.x
            set pos.y = pos.y + vel.y
        }
    }
}

spawn {
    spawn Line ([-25,25],[1,-1])
    spawn Line ([-25,-25],[1,1])
    await 5:s
    pico-quit()
}

pico-loop()
